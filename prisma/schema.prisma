  @@map("mensajes")
  @@index([ticketId], map: "mensajes_ticket_id_fkey")
  @@index([senderId], map: "mensajes_sender_id_fkey")
  @@index([receiverId], map: "mensajes_receiver_id_fkey")  // Índice para el receptor
  ticket         Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  sender         User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver       User?    @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: SetNull)
  }

