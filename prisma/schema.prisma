  senderId       Int      @map("sender_id")
  receiverId     Int?     @map("receiver_id")         // Campo nuevo para el receptor del mensaje
  text           String?  @map("text") @db.LongText
  imageUrl       String?  @map("image_url")
  imagenPublicId String?  @map("imagen_public_id")
  delivered      Boolean  @default(false) @map("delivered") // Indica si se recibió en el cliente
